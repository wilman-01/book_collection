<% if !flash[:notice].blank? %>
  <div class="notice">
    <%= flash[:notice] %>
  </div>
<% end %>

<div class="books index" >
    <h2>Books</h2>
    <%= link_to "<button>Add book</button>".html_safe, new_book_path, :class => 'action new' %>

    <table class="listing" summary="Book list">
      <tr class="header">
        <th>Title</th>
        <th>Author</th>
        <th>Genre</th>
        <th>Price</th>
        <th>Published Date</th>
        <th>Actions</th>
      </tr>
      <% @books.each do |book| %>
      <tr >
        <td><%= book.title %></td>
        <td><%= book.author %></td>
        <td><%= book.genre %></td>
        <td><%= book.price %></td>
        <td><%= book.published_date.strftime("%m/%d/%Y") %></td>
        <td class="actions">
          <%= link_to "<button>Show</button>".html_safe, book_path(book.id), :class => 'action show' %>
          <%= link_to "<button>Edit</button>".html_safe, edit_book_path(book.id), :class => 'action edit' %>
          <%= link_to"<button>Delete</button>".html_safe, delete_book_path(book.id), :class => 'action delete' %>
        </td>
      </tr>
      <% end %>
    
    </table>

</div>
